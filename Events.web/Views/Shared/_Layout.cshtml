<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASM2</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-fixed-top" style="background-color: mediumpurple">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { style = "color: #FFF; line-height: 51px; font-size: 20px" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if ((User.IsInRole("Trainee")) || (User.IsInRole("Trainer")))
                    {
                        <li>@Html.ActionLink("My Course", "CourseAssigned", "Train", null, htmlAttributes: new { style = "color: #FFF; font-size: 14px" })</li>
                        <li>@Html.ActionLink("Course List", "Course", "Train", null, htmlAttributes: new { style = "color: #FFF; font-size: 14px" })</li>
                    }
                    @if (User.IsInRole("TrainingStaff"))
                    {
                        <li>@Html.ActionLink("Course", "Course", "TrainingStaff", null, htmlAttributes: new { style = "color: #FFF; font-size: 14px" })</li>
                        <li>@Html.ActionLink("Course Category", "CourseCategory", "TrainingStaff", null, htmlAttributes: new { style = "color: #FFF; font-size: 14px" })</li>
                        <li>@Html.ActionLink("Trainee", "Trainee", "TrainingStaff", null, htmlAttributes: new { style = "color: #FFF; font-size: 14px" })</li>
                        <li>@Html.ActionLink("Trainer", "Trainer", "TrainingStaff", null, htmlAttributes: new { style = "color: #FFF; font-size: 14px" })</li>
                    }
                    @if (User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Staff", "TrainingStaff", "Admin", null, htmlAttributes: new { style = "color: #FFF; font-size: 14px" })</li>
                        <li>@Html.ActionLink("Trainer", "Trainer", "Admin", null, htmlAttributes: new { style = "color: #FFF; font-size: 14px" })</li>
                        <li>@Html.ActionLink("Role List", "Role", "Admin", null, htmlAttributes: new { style = "color: #FFF; font-size: 14px" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr>
        <footer>
            <p style="color:rgba(0, 0, 255, 0.6);">&copy; @DateTime.Now.Year - ASM2 Application</p>
        </footer>
    </div>
</body>
</html>
