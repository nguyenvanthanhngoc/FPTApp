@model IEnumerable<Events.web.Models.CourseCategory>
@{
    ViewBag.Title = "Course Categories";
}

<h2>Course Categories</h2>

@Html.ActionLink("Create Category", "CourseCategoryCreate", "TrainingStaff")

<table class="table">
    <tr style="background-color: #DDA0DD">
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
    </tr>
    @foreach (var category in Model)
    {
<tr style="background-color: #E6E6FA">
    <td>@category.Id</td>
    <td>@category.Name</td>
    <td>@category.Description</td>
    <td>
        @Html.ActionLink("Edit", "CourseCategoryEdit", new { id = category.Id }) |
        @Html.ActionLink("Delete", "CourseCategoryDelete", new { id = category.Id })
    </td>
</tr>
    }
</table>